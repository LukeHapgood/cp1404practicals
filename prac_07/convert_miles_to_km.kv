BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0'
            font_size: 24
            on_text: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_change(1)
            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_change(-1)
    Button:
        text: 'Convert Miles to Kilometers'
#        on_press: app.handle_conversion()
    Label:
        font_size: 36
        text: app.miles
        color: (1, 0, 0, 1)